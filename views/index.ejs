    <!-- Buy tickets and share -->
    <section id="tickets">
      <h3>Buy tickets now</h3>
      <p>Tickets are £15 and can be purchased here. (insert Eventbrite link).</p>
      <p>It’s going to be a fantastic night and we look forward to seeing you there!</p>


      <button id="customButton">Purchase</button>

      <script>
      var handler = StripeCheckout.configure({
        key: 'pk_test_ddtNFXJaPXpOoFDYAcyurEEd',
        image: 'https://stripe.com/img/documentation/checkout/marketplace.png',
        locale: 'auto',
        // Run this function on checkout completion
        // Sending token to server
        token: function(token) {
          fetch('/checkout', {
            method: 'POST', // or 'PUT'
            body: JSON.stringify({
              stripeToken: token.id,
              quntity: 1
            }),
            headers: new Headers({
              'Content-Type': 'application/json'
            })
          }).then(res => res.json())
          .catch(error => console.error('Error:', error))
          .then(response => console.log('Success:', response));
        }
      });

      document.getElementById('customButton').addEventListener('click', function(e) {
        // Open Checkout with further options:
        handler.open({
          name: 'smallwins.co.uk',
          description: '2 widgets',
          currency: 'gbp',
          amount: 2000
        });
        e.preventDefault();
      });

      </script>

